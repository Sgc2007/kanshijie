#include "stm32f10x.h"                  // Device header
/**
  * 函    数：编码器1初始化（电机1）
  * 说    明：连接到TIM3，对应引脚PA6（TIM3_CH1）和PA7（TIM3_CH2）
  */
void Encoder1_Init(void)
{
    /*开启时钟*/
    RCC_APB1PeriphClockCmd(RCC_APB1Periph_TIM3, ENABLE);         // 开启TIM3时钟
    RCC_APB2PeriphClockCmd(RCC_APB2Periph_GPIOA, ENABLE);        // 开启GPIOA时钟
    
    /*GPIO初始化（编码器A、B相）*/
    GPIO_InitTypeDef GPIO_InitStructure;
    GPIO_InitStructure.GPIO_Mode = GPIO_Mode_IPU;                // 上拉输入，防止悬空
    GPIO_InitStructure.GPIO_Pin = GPIO_Pin_6 | GPIO_Pin_7;       // PA6=TIM3_CH1，PA7=TIM3_CH2
    GPIO_InitStructure.GPIO_Speed = GPIO_Speed_50MHz;
    GPIO_Init(GPIOA, &GPIO_InitStructure);
    
    /*时基单元初始化*/
    TIM_TimeBaseInitTypeDef TIM_TimeBaseInitStructure;
    TIM_TimeBaseInitStructure.TIM_ClockDivision = TIM_CKD_DIV1;
    TIM_TimeBaseInitStructure.TIM_CounterMode = TIM_CounterMode_Up;
    TIM_TimeBaseInitStructure.TIM_Period = 65535;                // 最大计数65535（溢出自动归零）
    TIM_TimeBaseInitStructure.TIM_Prescaler = 0;                 // 不分频，编码器脉冲直接计数
    TIM_TimeBaseInitStructure.TIM_RepetitionCounter = 0;
    TIM_TimeBaseInit(TIM3, &TIM_TimeBaseInitStructure);
    
    /*编码器接口配置*/
    TIM_EncoderInterfaceConfig(TIM3, TIM_EncoderMode_TI12,       // 同时使用TI1和TI2，4倍频计数
                               TIM_ICPolarity_Rising, TIM_ICPolarity_Rising);  // 不反相（根据硬件调整）
    TIM_ICInitTypeDef TIM_ICInitStructure;
    TIM_ICStructInit(&TIM_ICInitStructure);
    TIM_ICInitStructure.TIM_ICFilter = 0xF;                      // 滤波值（减少抖动）
    TIM_ICInit(TIM3, &TIM_ICInitStructure);                      // 应用配置到TIM3
    
    /*使能定时器*/
    TIM_SetCounter(TIM3, 0);                                     // 初始计数清零
    TIM_Cmd(TIM3, ENABLE);
}

/**
  * 函    数：编码器2初始化（电机2）
  * 说    明：连接到TIM4，对应引脚PB6（TIM4_CH1）和PB7（TIM4_CH2）
  */
void Encoder2_Init(void)
{
    /*开启时钟*/
    RCC_APB1PeriphClockCmd(RCC_APB1Periph_TIM4, ENABLE);         // 开启TIM4时钟
    RCC_APB2PeriphClockCmd(RCC_APB2Periph_GPIOB, ENABLE);        // 开启GPIOB时钟
    
    /*GPIO初始化（编码器A、B相）*/
    GPIO_InitTypeDef GPIO_InitStructure;
    GPIO_InitStructure.GPIO_Mode = GPIO_Mode_IPU;                // 上拉输入，防止悬空
    GPIO_InitStructure.GPIO_Pin = GPIO_Pin_6 | GPIO_Pin_7;       // PB6=TIM4_CH1，PB7=TIM4_CH2
    GPIO_InitStructure.GPIO_Speed = GPIO_Speed_50MHz;
    GPIO_Init(GPIOB, &GPIO_InitStructure);
    
    /*时基单元初始化*/
    TIM_TimeBaseInitTypeDef TIM_TimeBaseInitStructure;
    TIM_TimeBaseInitStructure.TIM_ClockDivision = TIM_CKD_DIV1;
    TIM_TimeBaseInitStructure.TIM_CounterMode = TIM_CounterMode_Up;
    TIM_TimeBaseInitStructure.TIM_Period = 65535;                // 最大计数65535（溢出自动归零）
    TIM_TimeBaseInitStructure.TIM_Prescaler = 0;                 // 不分频，编码器脉冲直接计数
    TIM_TimeBaseInitStructure.TIM_RepetitionCounter = 0;
    TIM_TimeBaseInit(TIM4, &TIM_TimeBaseInitStructure);
    
    /*编码器接口配置*/
    TIM_EncoderInterfaceConfig(TIM4, TIM_EncoderMode_TI12,       // 同时使用TI1和TI2，4倍频计数
                               TIM_ICPolarity_Rising, TIM_ICPolarity_Rising);  // 不反相（根据硬件调整）
    TIM_ICInitTypeDef TIM_ICInitStructure;
    TIM_ICStructInit(&TIM_ICInitStructure);
    TIM_ICInitStructure.TIM_ICFilter = 0xF;                      // 滤波值（减少抖动）
    TIM_ICInit(TIM4, &TIM_ICInitStructure);                      // 应用配置到TIM4
    
    /*使能定时器*/
    TIM_SetCounter(TIM4, 0);                                     // 初始计数清零
    TIM_Cmd(TIM4, ENABLE);
}
/**
  * 函    数：获取编码器1（电机1）的脉冲增量
  * 返 回 值：自上次调用后，编码器的脉冲变化量（正为正转，负为反转）
  */
int16_t Encoder_Get1(void)
{
    int16_t temp;
    // 读取当前计数并清零（下次读取的是新的增量）
    temp = (int16_t)TIM_GetCounter(TIM3);
    TIM_SetCounter(TIM3, 0);
    return temp;
}

/**
  * 函    数：获取编码器2（电机2）的脉冲增量
  * 返 回 值：自上次调用后，编码器的脉冲变化量（正为正转，负为反转）
  */
int16_t Encoder_Get2(void)
{
    int16_t temp;
    // 读取当前计数并清零（下次读取的是新的增量）
    temp = (int16_t)TIM_GetCounter(TIM4);
    TIM_SetCounter(TIM4, 0);
    return temp;
}